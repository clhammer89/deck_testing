{
  "manifest_version": 3,
  "name": "Card Management Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Card Management",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["decklists/*"],
    "matches": ["<all_urls>"]
  }]
}
